/* components/video/cmp.wxss */

.container{
    width: 700rpx;
}
.video{
    height: 400rpx;
    width: 700rpx;
}

.poster-container{
    position: relative;
    width: 700rpx;
    height: 400rpx;
}
.poster{
    width: 100%;
    height: 100%;
}
.play{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: calc(50% - 50rpx);
    top: calc(50% - 50rpx);
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.6);
}
.controler{
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}
.play .text{
    font-size: 24rpx;
    color: #fff;
}
.main-title{
    font-size: 40rpx;
    padding: 20rpx;
}

.mask{
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 1334rpx;
    background-color: rgba(0, 0, 0, 0.6);
}